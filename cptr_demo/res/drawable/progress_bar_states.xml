<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:centerColor="#f1eded"
                android:endColor="#f1eded"
                android:startColor="#f1eded" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:centerColor="#6cabf8"
                    android:endColor="#6cabf8"
                    android:startColor="#6cabf8" />
            </shape>
        </clip>
    </item>

</layer-list>